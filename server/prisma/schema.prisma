generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  avatar   String
  email    String  @unique
  password String
  score    Float   @default(0)
  wins     Int     @default(0)
  defeats  Int     @default(0)
  admin    Boolean @default(false)
